<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:android="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.AndroidSpecific;assembly=Microsoft.Maui.Controls"
            x:Class="MyApp.MVVM.Views.TabbedView"
            android:TabbedPage.ToolbarPlacement="Bottom"
            xmlns:local="clr-namespace:MyApp.MVVM.Views"
            BarBackgroundColor="#DAD7CD"
            android:TabbedPage.IsSwipePagingEnabled="True"
            SelectedTabColor="#3A5A40"
            UnselectedTabColor="#A3B18A"
            android:TabbedPage.IsSmoothScrollEnabled="True"
            Shell.NavBarIsVisible="false"
            >
    <NavigationPage Title="Look up" >
        <x:Arguments>
            <local:MainPage NavigationPage.HasNavigationBar="False"/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Translate">
        <x:Arguments>
            <ContentPage x:Name="Tab2" BackgroundColor="Pink">
                <Button Text="navigation" Clicked="Button_Clicked" />
            </ContentPage>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="My Dictionary">
        <x:Arguments>
            <ContentPage />
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Help">
        <x:Arguments>
            <ContentPage />
        </x:Arguments>
    </NavigationPage>
</TabbedPage>