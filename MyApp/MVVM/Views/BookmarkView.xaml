                                                HeightRequest="30"
                                                WidthRequest="30"
                                                HorizontalOptions="Center"
                                                VerticalOptions="Center"
                                                StrokeShape="RoundRectangle 80,80,80,80">
                                                <Border.Triggers>
                                                    <!--#-->
                                                    <MultiTrigger TargetType="Border">
                                                        <MultiTrigger.Conditions>
                                                            <BindingCondition Binding="{Binding Path=SelectedItem, Source={x:Reference collectionView}}"
                                                                              Value="#"/>
                                                            <BindingCondition Binding="{Binding Path=Text, Source={x:Reference label}}"
                                                                              Value="#"/>
                                                        </MultiTrigger.Conditions>
                                                        <Setter Property="BackgroundColor"
                                                                Value="#A3B18A"/>
                                                    </MultiTrigger>
