<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyApp.MVVM.Views.LoadingView"
             Title="LoadingView">

    <Grid 
        RowDefinitions="*,Auto,*">
        <Image Grid.Row="0" Source="polygon_top.png" Aspect="Fill" IsAnimationPlaying="True"/>

        <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center">
            <Image Source="logo.svg"/>
            <Image Source="bdict.svg"/>
        </HorizontalStackLayout>

        <Image Grid.Row="2" Source="polygon_bottom.png" Aspect="Fill"/>
    </Grid>

</ContentPage>